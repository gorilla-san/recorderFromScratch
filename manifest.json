{
    "manifest_version": 3,
    "name": "Screen/Audio Recorder",
    "version": "1.0",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "desktopCapture",
        "pageCapture",
        "tabCapture"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Start recording"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "images/logo.svg",
                "images/microphone.png",
                "images/stop.png",
                "images/trash.png",
                "images/icon16.png",
                "images/icon48.png",
                "images/icon128.png"
            ],
            "matches": ["<all_urls>"]
        }
    ]
}
